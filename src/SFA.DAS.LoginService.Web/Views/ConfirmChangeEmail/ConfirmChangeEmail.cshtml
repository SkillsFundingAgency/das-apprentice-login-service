@model SFA.DAS.LoginService.Web.Controllers.ChangeEmail.ViewModels.ConfirmChangeEmailViewModel
@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Confirm Your Email Address";
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial name="/Views/Partials/_validationErrorSummary.cshtml" />
            <h1 class="govuk-heading-xl">Change your email address</h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form asp-action="Post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="NewEmailAddress" />
                <input type="hidden" asp-for="Token" />

                <div class="govuk-form-group">
                    <label class="govuk-label govuk-label--m" asp-for="TempCurrentEmail">
                        (Temporary) Current email address
                    </label>
                    <input class="govuk-input" asp-for="TempCurrentEmail">
                </div>

                <div class="govuk-form-group" sfa-validation-for="Password" sfa-validationerror-class="govuk-form-group--error">
                    <label class="govuk-label govuk-label--m" asp-for="Password">
                        Your password
                    </label>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <span id="email-error" asp-validation-for="Password" class="govuk-error-message"></span>
                    }
                    <input class="govuk-input" asp-for="Password" aria-describedby="email-address-hint" sfa-validation-for="Password" sfa-validationerror-class="govuk-input--error">
                </div>

                <div class="govuk-form-group">
                    <button class="govuk-button" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</main>